{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // argo_preproc_small.sh
        {
            "name": "Python Debugger: Run Preprocess Val",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data_argo/run_preprocess.py",
            "console": "integratedTerminal",
            "args": [
                "--mode", "val",
                "--data_dir", "~/data/dataset/argo_motion_forecasting/val/data/",
                "--save_dir", "data_argo/features/",
                "--small"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "Python Debugger: Run Preprocess Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data_argo/run_preprocess.py",
            "console": "integratedTerminal",
            "args": [
                "--mode", "train",
                "--data_dir", "~/data/dataset/argo_motion_forecasting/train/data/",
                "--save_dir", "data_argo/features/",
                "--small"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        // simpl_av1_vis.sh
        {
            "name": "Python Debugger: Simpl AV1 Vis",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/visualize.py",
            "console": "integratedTerminal",
            "args": [
                "--features_dir", "data_argo/features/",
                "--mode", "val",
                "--use_cuda",
                "--model_path", "saved_models/simpl_av1_ckpt.tar",
                "--adv_cfg_path", "config.simpl_cfg",
                "--visualizer", "simpl.av1_visualizer:Visualizer",
                "--seq_id", "-1"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
        }
    ]
}